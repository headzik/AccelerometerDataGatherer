<?xml version="1.0" encoding="utf-8"?>
<android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="2"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/sittingToggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="20dp"
        android:textOn="Sitting"
        android:textOff="Sitting" />

    <ToggleButton
        android:id="@+id/standingToggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="20dp"
        android:textOn="Standing"
        android:textOff="Standing"/>

    <ToggleButton
        android:id="@+id/walkingToggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="20dp"
        android:textOn="Walking"
        android:textOff="Walking"/>

    <ToggleButton
        android:id="@+id/joggingToggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="20dp"
        android:textOn="Jogging"
        android:textOff="Jogging" />

    <ToggleButton
        android:id="@+id/upstairsToggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="20dp"
        android:textOn="Upstairs"
        android:textOff="Upstairs" />

    <ToggleButton
        android:id="@+id/downstairsToggle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="20dp"
        android:textOn="Downstairs"
        android:textOff="Downstairs"/>

</android.widget.GridLayout>